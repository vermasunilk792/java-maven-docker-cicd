         stage('Docker Build and Tag') {
           steps {

                sh 'docker build -t webapp:latest .'
                //sh 'docker run --rm -d --group-add $(stat -c '%g' /var/run/docker.sock) -v /var/run/docker.sock:/var/run/docker.sock -P samplewebapp:latest'
