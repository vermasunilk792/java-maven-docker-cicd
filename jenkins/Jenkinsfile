           }
         }

         stage('Run Docker container on Jenkins Agent') {

            steps
                        {
                sh "docker run -d -p 8003:8080 webapp:latest"

            }
        }
         stage('Run Docker container on remote hosts') {

            steps {
		        sh "ssh-add"
                sh "docker -H ssh://ubuntu@54.172.226.69 run -d -p 8003:8080 webapp:latest"

            }
        }
